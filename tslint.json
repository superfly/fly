{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": false,
    "no-console": false,
    "interface-name": false,
    "prettier": false, // enable on CI
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case", // remove this once no-var-requires is enabled
      "allow-leading-underscore"
    ],
    // revisit later, too much change at once
    "ordered-imports": false,
    "member-ordering": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "no-var-requires": false,
    "no-empty-interface": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      // remove once tslint supports typescript 3 project refs since tsconfig will
      // then inform tslint which files to lint
      "node_modules/**",
      "**/node_modules/**",
      "packages/*/lib/**",
      "packages/*/dist/**"
    ]
  }
}
